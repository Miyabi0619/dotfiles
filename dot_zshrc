# --- Homebrew を最初に読み込む（Apple Silicon / Intel 両対応） ---
if [ -x /opt/homebrew/bin/brew ]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
elif [ -x /usr/local/bin/brew ]; then
  eval "$(/usr/local/bin/brew shellenv)"
fi

# --- starship があるときだけ初期化する ---
if command -v starship >/dev/null 2>&1; then
  eval "$(starship init zsh)"
fi

eval "$(sheldon source)"

# Starship prompt
eval "$(starship init zsh)"

# 開発環境設定を読み込み
source ~/.env_dev

# 追加のPATH設定
export LDFLAGS="-L/opt/homebrew/opt/tcl-tk/lib"
export CPPFLAGS="-I/opt/homebrew/opt/tcl-tk/include"
export PATH="/opt/homebrew/opt/tcl-tk/bin:$PATH"

# エイリアス
# alias code="code-insiders"
alias python='python3'
alias ll='ls -la'
alias la='ls -A'
alias l='ls -CF'

# 履歴設定
HISTSIZE=10000
SAVEHIST=10000
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_SAVE_NO_DUPS
setopt SHARE_HISTORY

# 補完設定
autoload -Uz compinit
compinit

# その他のツール
# Added by LM Studio CLI (lms)
export PATH="$PATH:$HOME/.lmstudio/bin"
# End of LM Studio CLI section

# Cargo環境変数（Rustがインストールされている場合）
[ -f "$HOME/.cargo/env" ] && source $HOME/.cargo/env


# Added by LM Studio CLI (lms)
export PATH="$PATH:/Users/soraha/.lmstudio/bin"
# End of LM Studio CLI section

export PATH="/opt/homebrew/bin:/opt/homebrew/sbin:$PATH"

alias proxyon='export http_proxy="http://wwwproxy.kanazawa-it.ac.jp:8080"; export https_proxy="http://wwwproxy.kanazawa-it.ac.jp:8080"; echo "Proxy has been set."'
alias proxyoff='unset http_proxy; unset https_proxy; echo "Proxy has been unset."'
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin:$PATH"

# Added by Antigravity
export PATH="/Users/soraha/.antigravity/antigravity/bin:$PATH"
